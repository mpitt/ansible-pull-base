description "Prometheus Node Exporter"
start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [016]

respawn
setuid root
setgid {{ prometheus_exporters_common_group }}

script
  exec >> "{{ prometheus_exporters_common_log_dir }}/node-exporter.log"
  exec 2>&1
  exec {{ prometheus_exporters_common_root_dir }}/node_exporter_current/node_exporter {% if prometheus_node_exporter_enabled_collectors %}-collectors.enabled={{ prometheus_node_exporter_enabled_collectors | join(',') }}{% endif %} {% for flag, flag_value in prometheus_node_exporter_config_flags.iteritems() %}-{{ flag }}={{ flag_value }} {% endfor %}

end script
